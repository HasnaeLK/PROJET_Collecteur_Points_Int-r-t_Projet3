<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    tools:context=".HomeActivity">

    <!-- Translucent overlay to make text readable on any background -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to PinPoint"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginTop="100dp"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Personalize and Save your Locations"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <!-- Go to Main Activity Button -->
        <Button
            android:id="@+id/goToMainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start your Journey"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginTop="32dp"
            android:padding="16dp"
            android:textStyle="bold"
            android:elevation="6dp"
            android:layout_gravity="center" />
    </LinearLayout>

    <!-- Question mark button to navigate to About interface -->
    <ImageView
        android:id="@+id/questionMark"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_question"
        android:contentDescription="About"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>
